<h2> My books </h2>
<div class="row d-flex justify-content-center">
	<div class="col-3">

		<a class="booklist" href=<%= "#{booklists_path}?sort=all" %>>All books</a>
		<a class="booklist" href=<%= "#{booklists_path}?sort=current" %>>Currently reading</a>
		<a class="booklist" href=<%= "#{booklists_path}?sort=want" %>>Want to read</a>
		<a class="booklist" href=<%= "#{booklists_path}?sort=read" %>>Read</a>
		<br>
		<br>
		<hr>
			<% @booklists.each do |booklist| %>
				<%= link_to "#{booklist.booklist_type}", booklist_path(booklist.id) %>
			<% end %>
		<%= link_to 'New list', new_booklist_path %>
	</div>
	<div class="col-8">


		<br>
		<br>

		<% if !@books %>

			<p>no books</p>

		<% else %>

		<table class="table">
  		<thead class="thead-dark">
    		<tr>
		      <th scope="col">#</th>
		      <th scope="col">Title</th>
		      <th scope="col">Author</th>
		      <th scope="col">Date added</th>

    			</tr>
  		</thead>
  		<tbody>
  			<% @books.each_with_index do |book, index| %>
		    <tr>
		      <th scope="row"><%= index+1 %></th>
		      <td><%= book.title %></td>
		      <td><%= book.author %></td>
		      <td><%= book.created_at.in_time_zone('Singapore').strftime('%d %B %Y') %></td>
		    </tr>
    		<% end %>
  			</tbody>
			</table>

		<% end %>



	</div>
</div>