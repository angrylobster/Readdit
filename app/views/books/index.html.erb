

<div class="row d-flex justify-content-center">
	<div class="col-9">

		<h2> Books </h2>

		<div>
			<%= form_tag search_books_path, :method => :get do %>
	  		<%= text_field_tag :query, params[:query] %> <%= submit_tag "Search!" %>
			<% end %>
		</div>

		<br>
		<br>
		<%= link_to 'New Book', new_book_path %>
		<br>
		<br>

		<% @books.each do |book| %>
		<a href=<%=book_path(book)%>>
			<div class="row my-1">
					<div class="col-3 d-flex justify-content-center ">
						<img src=<%= book.image_url %> alt=<%= book.title %>>
					</div>
					<div>
						<%= book.title %> <br>
						by <%= book.author %> <br>
					</div>
			</div>
		</a>

		<%= form_with scope: :booklist, url: booklists_path, local: true do |form| %>

			<p>
				<%= form.label :booklist_type %><br>
				<%= form.text_area :booklist_type %>
  		</p>
		 	<p>
				<%= form.hidden_field :user_id, value: current_user.id %>
				<%= form.hidden_field :book_ids, value: book.id %>
			</p>
		 	<p>
				<%= form.submit %>
			</p>
			<% end %>

		<% end %>

	<%= will_paginate @books %>

	</div>
</div>